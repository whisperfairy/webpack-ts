{
    "compilerOptions": {
        "outDir": "./built/",
        "sourceMap": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "target": "es6",
        "allowSyntheticDefaultImports":true,
        "allowJs": false
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "./src/Server/*"
    ]
}